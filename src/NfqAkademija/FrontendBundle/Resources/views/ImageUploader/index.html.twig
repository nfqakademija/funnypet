{% extends "NfqAkademijaFrontendBundle:Blocks:base.html.twig" %}

{% block body %}

    {{ form_start(imageUploader, {'attr': {'novalidate': 'novalidate', "class": "form-horizontal"}}) }}
        {{ form_errors(imageUploader) }}

        <div class="form-group">
            {{ form_label(imageUploader.title, "Photo title", {"label_attr": {"class": "col-sm-2 control-label"}}) }}
            {#{{ form_errors(imageUploader.title) }}#}
            <div class="col-sm-10">
            {{ form_widget(imageUploader.title, {"attr": {"class": "form-control"}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(imageUploader.fileName, "Photo", {"label_attr": {"class": "col-sm-2 control-label"}}) }}
            {#{{ form_errors(imageUploader.fileName) }}#}
            <div class="col-sm-10">
            {{ form_widget(imageUploader.fileName) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
            {{ form_row(imageUploader.upload, {'attr': {'class': 'btn btn-primary btn-lg pull-left'}} ) }}
            </div>
        </div>

    {{ form_end(imageUploader) }}

{% endblock %}

{% block headerDescription %}

    <h1>Upload your pet photo</h1>

{% endblock %}

{% block javascript %}
    <script src="{{ asset('bundles/nfqakademijafrontend/js/upload-photo.js') }}"></script>
{% endblock %}